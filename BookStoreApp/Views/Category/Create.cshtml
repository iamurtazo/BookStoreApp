@model Category

<form method="post">
    <div action="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            @* <label asp-for="Name" class="p-0"></label> *@
            <input asp-for="Name" class="form-control" placeholder="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            @* <label asp-for="DisplayOrder" class="p-0"></label> *@
            <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn-outline-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success form-control">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
   @{
       <partial name="_ValidationScriptsPartial" />
   }
}